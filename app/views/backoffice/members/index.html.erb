<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
            Listando Membros
            <%= link_to "Novo Membro", new_backoffice_member_path, class:"btn btn-outline btn-success btn-sm pull-right", style:"margin-top: -5px;" %>
            </div>
            <!-- /.panel-heading -->
            <div class="panel-body">
                <table width="100%" class="table table-striped table-bordered table-hover" id="dataTables-example">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Email</th>
                            <th>Tipo de Membro</th>
                            <th>Categoria</th>
                            <th></th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                    <% @members.each do |member| %>
                    <tr>
                        <td><%= member.id %></td>
                        <td><%= member.email %></td>
                        <td><%= member.type_member %></td>
                        <td><%= member.category %></td>
                        <td style="width: 1px;">
                            <%= link_to "Editar", edit_backoffice_member_path(member), class:"btn btn-outline btn-primary btn-xs" %>
                        </td>
                        <td style="width: 1px;">
                            <%= link_to "Apagar", backoffice_member_path(member), method: :delete, class:"btn btn-outline btn-danger btn-xs", data: {confirm: "VocÃª tem certeza que deseja deletar o membro <b>#{member.email}</b>?"} %>
                        </td>
                    </tr>
                    <% end %>
                    </tbody>
                </table>
            </div>
            <!-- /.panel-body -->
        </div>
        <!-- /.panel -->
    </div>
    <!-- /.col-lg-12 -->
</div>
            <!-- /.row -->
<script>
$(document).ready(function() {
    $('#dataTables-example').DataTable({
        responsive: true
    });
});
</script>
