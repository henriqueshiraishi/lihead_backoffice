<div class="col-lg-6">
    <h1 class="page-header">Membros</h1>

        <% if @member.errors.any? %>
            <div class="alert alert-warning alert-dismissable">
                <button type="button" class="close" data-dismiss="alert" aria-hidden="true">Ã—</button>
                <ul>
                    <% @member.errors.full_messages.each do |message| %>
                        <li><%= message %></li>
                    <% end %>
                </ul>
             </div>
        <% end %>
    <div class="panel panel-default">
        <div class="panel-heading">
            <%= action %>
        </div>
        <!-- /.panel-heading -->
        <div class="panel-body">
            <div class="col-lg-12">
                <%= form_for([:backoffice, @member]) do |f| %>
                    <div class="form-group">
                        <label>Email</label>
                        <%= f.text_field :email, class:"form-control", placeholder:"Ex: email@email.com" %>
                    </div>
                    <div class="form-group">
                        <label>Tipo de Membro</label>
                        <%= f.text_field :type_member, class:"form-control", placeholder:"Demo" %>
                    </div>
                    <div class="form-group">
                        <label>Categoria</label>
                        <%= f.text_field :category, class:"form-control", placeholder:"DEMO, AAA, BBB, CCC ou ZZZ" %>
                    </div>
                    <div class="form-group">
                        <label>Password</label>
                        <%= f.password_field :password, class:"form-control", autocomplete: "off", placeholder: "Password" %>
                    </div>
                    <div class="form-group">
                        <label>Password Confirmation</label>
                        <%= f.password_field :password_confirmation, class:"form-control", autocomplete: "off", placeholder: "Password confirmation" %>
                    </div>
                    <button type="submit" class="btn btn-default">Salvar</button>
                    <script>
                        $('button').click(function(){
                            $(this).css('display','none');
                        });
                    </script>
                <% end %>
            </div>
        </div>
        <!-- /.panel-body -->
    </div>
</div>
