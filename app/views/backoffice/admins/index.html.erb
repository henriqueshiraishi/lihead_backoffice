<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
            Listando Administradores
            <% if policy(@admins).new? %>
                <%= link_to "Novo Administrador", new_backoffice_admin_path, class:"btn btn-outline btn-success btn-sm pull-right", style:"margin-top: -5px;" %>
            <% else %>
                <a href="" class="btn btn-outline btn-success btn-sm pull-right disabled" style="margin-top: -5px;">Novo Administrador</a>
            <% end %>
            </div>
            <!-- /.panel-heading -->
            <div class="panel-body">
                <table width="100%" class="table table-striped table-bordered table-hover" id="dataTables-example">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Nome</th>
                            <th>Email</th>
                            <th>Acesso</th>
                            <th></th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                    <% @admins.each do |admin| %>
                    <tr>
                        <td><%= admin.id %></td>
                        <td><%= admin.name %></td>
                        <td><%= admin.email %></td>
                        <td><%= admin.role_i18n %></td>
                        <td style="width: 1px;">
                            <%= link_to "Editar", edit_backoffice_admin_path(admin), class:"btn btn-outline btn-primary btn-xs" %>
                        </td>
                        <% unless current_admin.id == admin.id %>
                        <td style="width: 1px;">
                            <%= link_to "Apagar", backoffice_admin_path(admin), method: :delete, class:"btn btn-outline btn-danger btn-xs", data: {confirm: "VocÃª tem certeza que deseja deletar o administrador <b>#{admin.name}</b>?"} %>
                        </td>
                        <% else %>
                        <td style="width: 1px;">
                            <button type="button" class="btn btn-danger btn-xs disabled">Apagar</button>
                        </td>
                        <% end %>
                    </tr>
                    <% end %>
                    </tbody>
                </table>
            </div>
            <!-- /.panel-body -->
        </div>
        <!-- /.panel -->
    </div>
    <!-- /.col-lg-12 -->
</div>
            <!-- /.row -->
<script>
$(document).ready(function() {
    $('#dataTables-example').DataTable({
        responsive: true
    });
});
</script>
