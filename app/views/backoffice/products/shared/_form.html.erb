<div class="col-lg-6">
    <h1 class="page-header">Produto</h1>

        <% if @product.errors.any? %>
            <div class="alert alert-warning alert-dismissable">
                <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
                <ul>
                    <% @product.errors.full_messages.each do |message| %>
                        <li><%= message %></li>
                    <% end %>
                </ul>
             </div>
        <% end %>
    <div class="panel panel-default">
        <div class="panel-heading">
            <%= action %>
        </div>
        <!-- /.panel-heading -->
        <div class="panel-body">
            <div class="col-lg-12">
                <%= form_for([:backoffice, @product]) do |f| %>
                    <div class="form-group">
                        <label>Nome</label>
                        <%= f.text_field :name, class:"form-control", placeholder:"Ex: Zeus" %>
                    </div>
                    <div class="form-group">
                        <label>Versão</label>
                        <%= f.text_field :version, class:"form-control", placeholder:"X.X.X" %>
                    </div>
                    <div class="form-group">
                        <label>Link</label>
                        <%= f.text_field :link, class:"form-control" %>
                    </div>
                    <div class="form-group">
                        <label>Categoria</label>
                        <%= f.text_field :category, class:"form-control", placeholder:"DEMO, AAA, BBB, CCC ou ZZZ" %>
                    </div>
                    <button type="submit" class="btn btn-default">Salvar</button>
                    <script>
                        $('button').click(function(){
                            $(this).css('display','none');
                        });
                    </script>
                <% end %>
            </div>
        </div>
        <!-- /.panel-body -->
    </div>
</div>
